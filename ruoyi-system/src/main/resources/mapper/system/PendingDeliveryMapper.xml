<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.PendingDeliveryMapper">
    
    <resultMap type="PendingDelivery" id="PendingDeliveryResult">
        <result property="deliveryId" column="delivery_id"/>
        <result property="customId" column="custom_id"/>
        <result property="customerName" column="customer_name"/>
        <result property="contractPaymentTime" column="contract_payment_time"/>
        <result property="totalContractAmount" column="total_contract_amount"/>
        <result property="deliveryDate" column="delivery_date"/>
        <result property="remainingBalance" column="remaining_balance"/>
        <result property="salesman" column="salesman"/>
        <result property="designer" column="designer"/>
        <result property="shipmentProgress" column="shipment_progress"/>
    </resultMap>
    
    <sql id="selectPendingDeliveryVo">
        select delivery_id, custom_id, customer_name, contract_payment_time, total_contract_amount, delivery_date, remaining_balance, salesman, designer, shipment_progress from pending_delivery
    </sql>
    
    <select id="selectPendingDeliveryList" parameterType="PendingDelivery" resultMap="PendingDeliveryResult">
        <include refid="selectPendingDeliveryVo"/>
        <where>
            <if test="customerName != null and customerName != ''">
                and customer_name like concat('%', #{customerName}, '%')
            </if>
            <if test="contractPaymentTime != null">
                and contract_payment_time = #{contractPaymentTime}
            </if>
            <if test="deliveryDate != null">
                and delivery_date = #{deliveryDate}
            </if>
            <if test="salesman != null and salesman != ''">
                and salesman like concat('%', #{salesman}, '%')
            </if>
            <if test="designer != null and designer != ''">
                and designer like concat('%', #{designer}, '%')
            </if>
            <if test="shipmentProgress != null">
                and shipment_progress = #{shipmentProgress}
            </if>
        </where>
        order by delivery_id desc
    </select>
    
    <select id="selectPendingDeliveryById" parameterType="Long" resultMap="PendingDeliveryResult">
        <include refid="selectPendingDeliveryVo"/>
        where delivery_id = #{deliveryId}
    </select>
    
    <insert id="insertPendingDelivery" parameterType="PendingDelivery">
        insert into pending_delivery
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="customId != null">
                custom_id,
            </if>
            <if test="customerName != null and customerName != ''">
                customer_name,
            </if>
            <if test="contractPaymentTime != null">
                contract_payment_time,
            </if>
            <if test="totalContractAmount != null">
                total_contract_amount,
            </if>
            <if test="deliveryDate != null">
                delivery_date,
            </if>
            <if test="remainingBalance != null">
                remaining_balance,
            </if>
            <if test="salesman != null and salesman != ''">
                salesman,
            </if>
            <if test="designer != null and designer != ''">
                designer,
            </if>
            <if test="shipmentProgress != null">
                shipment_progress,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="customId != null">
                #{customId},
            </if>
            <if test="customerName != null and customerName != ''">
                #{customerName},
            </if>
            <if test="contractPaymentTime != null">
                #{contractPaymentTime},
            </if>
            <if test="totalContractAmount != null">
                #{totalContractAmount},
            </if>
            <if test="deliveryDate != null">
                #{deliveryDate},
            </if>
            <if test="remainingBalance != null">
                #{remainingBalance},
            </if>
            <if test="salesman != null and salesman != ''">
                #{salesman},
            </if>
            <if test="designer != null and designer != ''">
                #{designer},
            </if>
            <if test="shipmentProgress != null">
                #{shipmentProgress},
            </if>
        </trim>
    </insert>
    
    <update id="updatePendingDelivery" parameterType="PendingDelivery">
        update pending_delivery
        <set>
            <if test="customId != null">
                custom_id = #{customId},
            </if>
            <if test="customerName != null and customerName != ''">
                customer_name = #{customerName},
            </if>
            <if test="contractPaymentTime != null">
                contract_payment_time = #{contractPaymentTime},
            </if>
            <if test="totalContractAmount != null">
                total_contract_amount = #{totalContractAmount},
            </if>
            <if test="deliveryDate != null">
                delivery_date = #{deliveryDate},
            </if>
            <if test="remainingBalance != null">
                remaining_balance = #{remainingBalance},
            </if>
            <if test="salesman != null and salesman != ''">
                salesman = #{salesman},
            </if>
            <if test="designer != null and designer != ''">
                designer = #{designer},
            </if>
            <if test="shipmentProgress != null">
                shipment_progress = #{shipmentProgress},
            </if>
        </set>
        where delivery_id = #{deliveryId}
    </update>
    
    <delete id="deletePendingDeliveryById" parameterType="Long">
        delete from pending_delivery where delivery_id = #{deliveryId}
    </delete>
    
    <delete id="deletePendingDeliveryByIds" parameterType="Long">
        delete from pending_delivery where delivery_id in
        <foreach item="deliveryId" collection="array" open="(" separator="," close=")">
            #{deliveryId}
        </foreach>
    </delete>
</mapper>